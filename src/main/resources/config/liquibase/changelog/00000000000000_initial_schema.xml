<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <property name="autoIncrement" value="true"/>

    <!--
        JHipster core tables.
        The initial schema has the '00000000000001' id, so that it is over-written if we re-generate it.
    -->
    <changeSet author="Laen" id="00000000000001">
        <createTable tableName="ship_order">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="weight" type="decimal(16,3)"/>
            <column name="batch_size" type="int(8)"/>
            <column name="description" type="varchar(255)"/>
            <column name="tag" type="varchar(255)"/>
        </createTable>
        <loadData
            file="config/liquibase/data/order.csv"
            separator=";"
            tableName="ship_order">
            <column name="created_date" type="timestamp"/>
        </loadData>
    </changeSet>

    <changeSet author="Laen" id="00000000000002">
        <createTable tableName="ship_batch">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="weight" type="decimal(16,3)"/>
            <column name="sort" type="int(8)"/>
            <column name="order_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <loadData
            file="config/liquibase/data/ship_batch.csv"
            separator=";"
            tableName="ship_batch">
            <column name="created_date" type="timestamp"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
